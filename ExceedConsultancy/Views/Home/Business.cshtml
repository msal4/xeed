@model ExceedConsultancy.Models.CombinedModel


@using System.Globalization;
@using Microsoft.AspNetCore.Localization;

@{
    var culture = ViewContext.HttpContext.Features.Get<IRequestCultureFeature>().RequestCulture.Culture.Name;
    var textDirection = culture.StartsWith("ar") ? "rtl" : "ltr";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = @SharedResource["title_Business"];
    ViewBag.MetaDescription = @SharedResource["MetaDescription_Business"];
    ViewBag.MetaKeywords = @SharedResource["MetaKeywords_Business"];
}






    <div id="anywhere-home">
    </div>
    <!-- ENd Header Area -->
    <!-- start breadcrumb area -->
    <div class="rts-breadcrumb-area breadcrumb-bg bg_image">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 breadcrumb-1">
                    <h1 class="title">
                        @if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
                        {
                        <span>@Model.Capabilities.text_Ar</span>
                        }
                        else
                        {
                        <span>@Model.Capabilities.text</span>
                        }
                    </h1>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="bread-tag">
                        <a asp-controller="Home" asp-action="index" > @SharedResource["nav_home"]</a>
                        <span> / </span>
                        @if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
                        {
                        <span>@Model.Capabilities.text_Ar</span>
                        }
                        else
                        {
                        <span>@Model.Capabilities.text</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb area -->
    <!-- start service details area -->
    <div class="rts-service-details-area rts-section-gap">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-md-12 col-sm-12 col-12">
                    <!-- service details left area start -->
                    <div class="service-detials-step-1">
                        <div class="thumbnail">
                        <img src="../../assets/images/@Model.Capabilities.Image" alt="@Model.Capabilities.text">
                        </div>
                    <h4 class="title">
                        @if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
                        {
                            <span>@Model.Capabilities.text_Ar</span>
                        }
                        else
                        {
                            <span>@Model.Capabilities.text</span>
                        }
                    </h4>
                        <p class="disc">
                        @if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
                        {
                            <span>@Model.Capabilities.Description_Ar</span>
                        }
                        else
                        {
                            <span>@Model.Capabilities.Description</span>
                        }
                    </p>

                    </div>
                    <!-- service details left area end -->

                </div>
                <!--rts blog wizered area -->
                <div class="col-xl-4 col-md-12 col-sm-12 col-12 mt_lg--60 pl--50 pl_md--0 pl-lg-controler pl_sm--0">
                    <!-- single wizered start -->
                    <div class="rts-single-wized Categories service">
                        <div class="wized-header">
                            <h5 class="title">
                                @SharedResource["Categories"]    
                            </h5>
                        </div>
                        <div class="wized-body">
                            <!-- single categoris -->
                        @if (Model.Home.Capabilitie != null)
                                {
                                    @foreach (var CapabilitieItem in Model.Home.Capabilitie.OrderBy(item => item.Order))
                                    {

                              <ul class="single-categories">
                                    <li>
                                        <a asp-controller="Home" asp-action="Business" asp-route-id="@CapabilitieItem.Id">
                                            @if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
                                            {
                                                <span>@CapabilitieItem.text_Ar</span>
                                            }
                                            else
                                            {
                                                <span>@CapabilitieItem.text</span>
                                            }<i class="far fa-long-arrow-right"></i>
                                        </a>
                                    </li>
                            </ul>
                            }
                        }
                        else
                        {
                            <p>No data available.</p>
                        }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
