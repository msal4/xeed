@model ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<section id="CreatePage" style="background-color: #c8bef2; background-size: auto 237px; " class="FormHeight">
    <div class="container formCRUD">

        <div class=" text-center">
            <h1>Change Password</h1>
        </div>

        @if (TempData["fail"] != null)
        {
            <p class="alert alert-danger d-block">@TempData["fail"]</p>
        }
        @if (TempData["success"] != null)
        {
            <p class="alert alert-success d-block">@TempData["success"]</p>
        }

        <form asp-action="ChangePassword" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="OldPassword">Old Password</label>
                <input type="password" asp-for="OldPassword" class="form-control">
                <span asp-validation-for="OldPassword"></span>
            </div>

            <div class=" form-group">
                <label asp-for="NewPassword">New Password</label>
                <input type="password" asp-for="NewPassword" class="form-control">
                <span asp-validation-for="NewPassword"></span>
            </div>

            <div class=" form-group">
                <label asp-for="CondirmNewPassword">Confirm Password</label>
                <input type="password" asp-for="CondirmNewPassword" class="form-control">
                <span asp-validation-for="CondirmNewPassword"></span>
            </div>

          
            <div class="form-group">
                @*<a asp-action="Home" class="btn btn-secondary" style="font-size: 25px;">Cancel</a>*@
                <button type="submit" class="btn btn-primary w-auto" style="font-size: 25px;">Save Changes</button>
              
            </div>


        </form>

    </div>
</section>
