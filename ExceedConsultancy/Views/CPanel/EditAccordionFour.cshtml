@model AccordionAspiration


@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<section id="CreatePage" class="FormHeight">
    <div class="container formCRUD">
        <div class=" text-center">
            <h1>Edit Accordion</h1>
        </div>

        @if (TempData["fail"] != null)
        {
        <p class="alert alert-danger d-block">@TempData["fail"]</p>
        }
        @if (TempData["success"] != null)
        {
        <p class="alert alert-success d-block">@TempData["success"]</p>
        }

        <form asp-action="EditAccordionFour" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />


            <div class="form-group">
                <label asp-for="Order">Accordion Number</label>
                <input asp-for="Order" class="form-control">
                <span asp-validation-for="Order"></span>
            </div>

            <div class="form-group">
                <label asp-for="TitleAccordion"> English Title</label>
                <input asp-for="TitleAccordion" class="form-control">
                <span asp-validation-for="TitleAccordion"></span>
            </div>


            <div class="form-group">
                <label asp-for="TitleAccordion_Ar">Arabic Title</label>
                <input asp-for="TitleAccordion_Ar" class="form-control">
                <span asp-validation-for="TitleAccordion_Ar"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description">English Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description_Ar">Arabic Description</label>
                <textarea asp-for="Description_Ar" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description_Ar"></span>
            </div>

            <div class="form-group">
                <a asp-action="Aspiration" class="btn btn-secondary" style="font-size: 25px;">Cancel</a>
                <button type="submit" class="btn btn-primary w-auto" style="font-size: 25px;">Save Changes</button>
            </div>


        </form>
    </div>
</section>





