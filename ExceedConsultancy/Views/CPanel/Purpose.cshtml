@model ExceedConsultancy.Models.AboutModel
@using Microsoft.AspNetCore.Html;

@using System.Globalization;
@using Microsoft.AspNetCore.Localization;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="rts-feature-area rts-section-gap Purpose" style="    background: #f6f6f6;">
        <div class="container-fluid padding-controler plr--120">
        <div class="row bg-white-feature  pt--120 pb--120" style="    background: #f6f6f6;">
          @foreach (var item in Model.Purpose)
            {
                <div class="col-xl-6 col-lg-12">
                    <div class="feature-left-area">
                        <img src="../assets/images/@item.Image" alt="purpose">
                    </div>
                </div>
                <div class="col-xl-6 col-lg-12">
                    <div class="rts-title-area feature  pl--30 pl_sm--0">
                        <p class="pre-title">
                        </p>
            
                      @*  <p></p>
                        <p class="disc">
                            <span style="font-size:20px; color: #104e7e;"></span>
                            <br />
                        </p>*@
                        @(new HtmlString(item.Text))
                        <div class="p- text-md h4">
                            <a href="@Url.Action("EditPurpose", "CPanel", new { id = item.Id })" class="btn btn-primary h4  border-0">Edit</a>
                        </div>
                  
                    </div>
                </div>
            }

                <div class="col-xl-12 col-lg-12">

                <div class="HeaderCreate text-center mt-1 mb-2">
                    <a href="@Url.Action("CreateAccordionFive", "CPanel")" class="btn btn-success CreateSlider">Create Accordion</a>
                </div>
                @if (Model.AccordionFive != null && Model.AccordionFive.Any())
                {
                    <div class="rts-faq-area rts-section-gap inner">
                        <div class="accordion-area inner inner2">
                            <div class="accordion-one-inner inner inner2">
                                <div class="accordion" id="accordionExample5">
                                    @foreach (var Item in Model.AccordionFive.OrderBy(item => item.Order))
                                    {
                                    <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading@(Item.Order)">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(Item.Order)" aria-expanded="true" aria-controls="collapse@(Item.Order)">
                                                    <span>@(Item.Order).</span>   @Item.TitleAccordion
                                            </button>
                                        </h2>
                                            <div id="collapse@(Item.Order)" class="accordion-collapse collapse show" aria-labelledby="heading@(Item.Order)" data-bs-parent="#accordionExample5">
                                            <div class="accordion-body">
                                                    @Item.Description
                                            </div>
                                        </div>
                                            <div class="card-footer   ">
                                                <a href="@Url.Action("EditPurpose", "CPanel", new { id = Item.Id })" class="btn btn-primary btn-edit h5" style="color:#ffffff">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="#" class="btn btn-danger  btn-delete h5" style="color:#d9534f" data-toggle="modal" data-target="#deleteConfirmationSliderModal-@(Item.Id)" data-sliderid="@Item.Id" data-delete-type="Purpose">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                    </div>
                                     
                                        <div class="modal fade" id="deleteConfirmationSliderModal-@(Item.Id)" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationSliderModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                                                        <form>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </form>

                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete this Accordion?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form method="post" id="delete-form">
                                                            @* <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>*@
                                                            <button type="submit" class="deleteBtn btn-delete" data-item-id="@Item.Id" data-delete-type="Purpose">Delete</button>
                                                        </form>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                }
                else{
                    <p>No Data Available</p>
                }

                </div>
            </div>
      </div>
</div>





