@model ExceedConsultancy.Models.AboutModel
@using Microsoft.AspNetCore.Html;

@using System.Globalization;
@using Microsoft.AspNetCore.Localization;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="rts-about-area rts-section-gap bg-about-sm-shape Purpose" id="about-us" style="background: #f6f6f6;">
    <div class="container">
        <div class="row g-5 align-items-center">
            <!-- about left -->
            <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-1 order-md-2 order-sm-2 order-2 mt_md--50 mt_sm--50">
                <div class="rts-title-area">
                    <p class="pre-title">
                        Xeed Consulting
                    </p>
                    <h2 class="title">
                        Our Aspiration
                    </h2>
                </div>
                <div class="about-inner">
                    @foreach (var item in Model.Aspiration)
                    {
                 @*        <p class="disc">
                     
                    </p>
                    <p class="disc">
                       <span style="font-size:20px; color: #104e7e;"> </span>
                        <br>
                    </p>*@
                        @(new HtmlString(item.Text))
                        <div class="p- text-md h4">
                            <a href="@Url.Action("EditAspiration", "CPanel", new { id = item.Id })" class="btn btn-primary h4  border-0">Edit</a>
                        </div>
                    }

                    <div class="HeaderCreate text-center mt-1 mb-2">
                        <a href="@Url.Action("CreateAccordionFour", "CPanel")" class="btn btn-success CreateSlider">Create Accordion</a>
                    </div>

                    @if (Model.AccordionFour != null && Model.AccordionFour.Any())
                    {
                   
                        <div class="accordion-area inner inner2">
                            <div class="accordion-one-inner inner">
                                <div class="accordion" id="accordionExample4">
                                    @foreach (var Item in Model.AccordionFour.OrderBy(item => item.Order))
                                    {
                                    <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading@(Item.Order)">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(Item.Order)" aria-expanded="false" aria-controls="collapse@(Item.Order)">
                                                    <span>@(Item.Order).</span>
                                                  @Item.TitleAccordion
                                            </button>
                                        </h2>
                                            <div id="collapse@(Item.Order)" class="accordion-collapse collapse" aria-labelledby="heading@(Item.Order)" data-bs-parent="#accordionExample4" style="">
                                            <div class="accordion-body">
                                                    @Item.Description
                                            </div>
                                        </div>
                                            <div class="card-footer   ">
                                                <a href="@Url.Action("EditAccordionFour", "CPanel", new { id = Item.Id })" class="btn btn-primary btn-edit h5" style="color:#ffffff">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="#" class="btn btn-danger  btn-delete h5" style="color:#d9534f" data-toggle="modal" data-target="#deleteConfirmationSliderModal-@(Item.Id)" data-sliderid="@Item.Id" data-delete-type="Aspiration">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                    </div>
                                  
                                        <div class="modal fade" id="deleteConfirmationSliderModal-@(Item.Id)" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationSliderModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                                                        <form>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </form>

                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete this Accordion?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form method="post" id="delete-form">
                                                            @* <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>*@
                                                            <button type="submit" class="deleteBtn btn-delete" data-item-id="@Item.Id" data-delete-type="Aspiration">Delete</button>
                                                        </form>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                    }
                    else{
                        <p>No Data Available</p>
                    }
                    @foreach (var item in Model.Aspiration)
                    {
                        <p class="disc">
                            @item.Text1
                        </p>
                    }
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 col-12 order-lg-2 order-md-1 order-sm-1 order-1">
                <div class="about-one-thumbnail">
                    @foreach (var item in Model.Aspiration)
                    {
                        <img src=" ../assets/images/@item.Image" alt="aspiration">
                    }

           
                </div>
            </div>
        </div>
    </div>
</div>

