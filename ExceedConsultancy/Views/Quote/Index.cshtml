@model ExceedConsultancy.Models.QuoteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Xeed Consulting | Make An Appointment";
    ViewBag.MetaDescription = "Request a free quote from Xeed Consulting by filling out the appointment form. We are dedicated to providing expert guidance and solutions tailored to your business needs.";
    ViewBag.MetaKeywords = "Make An Appointment, Request a free quote, Xeed Consulting, appointment form, expert guidance, business needs";

}


<body>



    <div id="anywhere-home">
    </div>
    <!-- ENd Header Area -->
    <!-- start breadcrumb area -->
    <div class="rts-breadcrumb-area breadcrumb-bg bg_image">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 breadcrumb-1">
                    <h1 class="title"> Make An Appointment</h1>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="bread-tag">
                        <a asp-controller="Home" asp-action="index">Home</a>
                        <span> / </span>
                        Make An Appointment
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb area -->
    <!-- contact area start -->
    <div class="rts-contact-area contact-one">
        <div class="container">
            <div class="row align-items-center g-0">
                <div class="col-lg-4 col-md-12 col-sm-12 col-12">
                    <div class="contact-image-one">
                        <img src="assets/images/contact/01.jpg" alt="quote">
                    </div>
                </div>
                <div class="col-lg-8 col-md-12 col-sm-12 col-12">
                    <div class="contact-form-area-one">
                        <div class="rts-title-area contact text-start">
                            <p class="pre-title">
                                Make An Appointment
                            </p>
                            <h2 class="title">Request a Call Back</h2>
                        </div>
                        <div id="form-messages"></div>
                        <form method="post">
                            <div class="name-email">
                                <input type="text" placeholder="Your Name" name="Name" required>
                                <input type="Email" placeholder="Email Address" name="email" required>
                            </div>
                            <div class="name-email">
                               <input type="text" placeholder="Subject" name="Subject">
                                <input type="text" placeholder="Phone" name="Phone" required>
                            </div>
                            <textarea placeholder="Type Your Message" name="Message"></textarea> <br /><br />
                            <div class="g-recaptcha" data-sitekey="6LfrHs8nAAAAAO6hxh1eZxaHuq9CFvKKZUcMx7PW"></div>

                            <button type="submit" class="rts-btn btn-primary">Submit </button>
                        </form>  @if (TempData["SuccessQuote"] != null)
                        {
                            <p class="alert alert-warning d-block blue-bg ">@TempData["SuccessQuote"]</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact area end -->
    <!-- start project with us section -->
  
    <!-- start project with us section End -->
    <!-- start header area -->
    <!-- rts footer area start -->
   
    <!-- scripts end form hear -->
</body>
